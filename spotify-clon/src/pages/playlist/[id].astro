---
import { allPlaylists, songs } from "../../lib/data";
import Layout from "../../layouts/Layout.astro";
import PlayListItemCard from "../../components/PlayListItemCard.astro";
import MusicTable from "../../components/MusicTable.astro";
import type { Song } from "../../lib/data";
import { CardPlayButton } from "@/components/CardPlayButton";

const { id } = Astro.params;
const playlist = allPlaylists.find((playlist) => playlist.id === id);
const playlistSongs = songs.filter((song) => song.albumId === playlist?.albumId);
---

<Layout title="Spotify Lorca">
  <div
    id="playlist-container"
    class="relative flex flex-col h-full overflow-x-hidden bg-[#121212]"
    transition:name=`playlist ${id} box`
  >
    <header class="flex flex-row gap-8 px-6 mt-12">
      <picture class="aspect-square w-52 h-52 flex-none">
        <img
          src={playlist?.cover}
          transition:name=`playlist ${playlist?.id} image`
          alt={`Cover of ${playlist?.title}`}
          class="h-full w-full object-cover rounded-sm shadow-lg"
        />
      </picture>
      <div class="flex flex-col justify-between">
        <h2 class="flex flex-1 items-end">Playlist</h2>
        <div>
          <h1 class="title-clamp text-6xl font-bold block text-white">
            {playlist?.title}
            <span transition:name=`playlist ${playlist?.id} title`></span>
          </h1>
        </div>
        <div class="flex-1 flex items-end">
          <div class="text-sm text-gray-300 font-normal">
            <div transition:name=`playlist ${playlist?.id} artists`>
              <span>{playlist?.artists.join(", ")}</span>
            </div>
            <p class="mt-1">
              <span class="text-white">{playlistSongs.length} canciones</span>, 3h aproximadamente
            </p>
          </div>
        </div>
      </div>
    </header>
    <div class="pl-6 pt-6">
      <CardPlayButton id={id} client:load size="large"/>
    </div>
    <div class="relative z-10 px-6 pt-10"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-[#121212] via-[#121212]/80 -z-[1]"></div>
    <section class="p-8">
      <MusicTable songs={playlistSongs} />
    </section>
  </div>
</Layout>

