---
import type { Playlist } from "@/lib/data";
import { CardPlayButton } from "@/components/CardPlayButton.jsx";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, cover, title, artists, color } = playlist;

const artistsString = artists.join(", ");
---

<article
  class="group relative shadow-lg hover:shadow-xl rounded-md hover:bg-[#1a1a1a]/65 bg-[#1a1a1a]/30 transition-all duration-300"
>
  <div
    class="absolute right-4 bottom-20 translate-y-4 z-10 transition-all duration-500 opacity-0 group-hover:translate-y-0 group-hover:opacity-100"
  >
    <CardPlayButton id={id} client:visible />
  </div>
  <a
    href={`/playlist/${id}`}
    class="playlist-item flex relative transition-all duration-300 p-2 pb-6
    overflow-hidden items-start gap-2 rounded-md w-40 flex-col"
    transition:name=`playlist ${id} box`
  >
    <picture class="aspect-square w-full h-auto flex-none">
      <img
        src={cover}
        transition:name=`playlist ${id} image`
        alt={`Cover of ${title} by ${artistsString}`}
        class="h-full w-full object-cover rounded-md"
      />
    </picture>
    <div class="flex flex-auto flex-col truncate px-2">
      <h4 class="text-sm text-white" transition:name=`playlist ${playlist?.id} title`>{title}</h4>
      <span class="text-xs text-[#959595]" transition:name=`playlist ${id} artists`
        >{artistsString}</span
      >
    </div>
  </a>
</article>
